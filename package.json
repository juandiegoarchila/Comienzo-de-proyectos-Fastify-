    "body-parser": "^1.20.3",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.1",
    "express-validator": "^7.2.1",
    "fastify": "^5.2.1",
    "fastify-cors": "^6.1.0",
    "fastify-helmet": "^7.1.0",
